---
 import { Icon } from 'astro-icon/components'
---

<header>
  <nav>

    <a href="/" class="logo">✦ Elena Ladygina</a>

    <ul class="desktop-menu">
     <li><a href="#about">Обо мне</a></li>
     <li><a href="#process">Процесс</a></li>
     <li><a href="#principles">Принципы</a></li>
     <li><a href="#contacts">Контакты</a></li>
    </ul>

     <div class="social-links">
        <a href="https://t.me/ElenLadyGina"><Icon name="telegram-icon" /></a>
        <a href="https://wa.me/+79055082987"><Icon name="whatsapp-icon" /></a>
        <a href="#"><Icon name="envelope-icon" /></a>
     </div>
    </ul>

    <ul class="sidebar" data-visible="false">
     <li><a href="#about">Обо мне</a></li>
     <li><a href="#process">Процесс</a></li>
     <li><a href="#principles">Принципы</a></li>
     <li><a href="#contacts">Контакты</a></li>
    </ul>

    <div class="hum"><Icon name="hum" /></div>


  </nav>
    
</header>


<style>

  header {
    width: 100%;
    position: absolute;
    z-index: 99;
    font-size: 18px;
    
  }

  nav {
    max-width: 1800px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 2rem 8rem;
  } 

  ul {
    display: flex;
    gap: 4rem;
    list-style: none;
    justify-content: flex-end;
    align-items: center;
  }
  

  a {
    color: var(--clr-white);
    text-decoration: none;
    font-size: 16px;
    transition: all .3s ease-in-out;
    font-weight: 400;
  }

  a:hover {
    color: var(--clr-white-0);
    scale: 1.2;
  }

  svg {
    height: 100%;
  }

  .social-links {
    display: flex;
    align-items: center;
    gap: 1.8rem;
  }

  .social-links > * {
    flex: 1;
  }

  [data-icon] {
    font-size: 1.3vw;
    color: var(--clr-white);
  }

.hum {
    display: none;
  }

  .sidebar {
    height: 100dvh;
    width: 65%;
    background-color: #cccccc;
    position: fixed;
    top: 0;
    right: 0;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    padding: 2rem;
    transform: translateX(100%);
    transition: all .3s ease-in-out;
    gap: 2rem;
    display: none;
  }

  .sidebar[data-visible="true"] {

    transform: translateX(0%);

  }

  @media (max-width: 1279px) {

    header {
      position: fixed;
    }

    .desktop-menu {
      display: none;
    }

    .hum {
      display: block;
      z-index: 999;
    }

    nav {
      padding: 1rem 1.5rem;
    }

    .social-links {
      display: none;
    }

    [data-icon] {
      font-size: 18px;
      height: 100%;
    }
    .sidebar {
      display: block;
    }

  }



</style>


<script>

  const hum = document.querySelector('.hum');
  const sidebar = document.querySelector('.sidebar');

  hum.addEventListener('click', ()=>{
    const visibility = sidebar.getAttribute('data-visible');

    if(visibility === 'false') {
     sidebar.setAttribute('data-visible', 'true'); 

    } else if(visibility === 'true') {
      sidebar.setAttribute('data-visible', 'false');
    }
  })

</script>
