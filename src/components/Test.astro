---
import { client } from "../utils/sanity/client"
import { urlForImages } from "../utils/sanity/urlForImages";
import Label from "./Label.astro"

const posts = await client.fetch(`*[_type == "post" && defined(slug)] | order(publishedAt desc)`);

---

<section class="section-blog">

    
	<div class="main-content" data-scroll data-scroll-speed="0.1">
		<Label label="Блог" />
		<p>Узнайте больше о имидже и стиле</p>
	</div>

    <div class="content" data-scroll data-scroll-speed="0.1">
        <ul>
        {posts.map((post) => (
            <li>

                <div class="li-content">

                    <img src={urlForImages(post.mainImage)} alt=""/>

                    <a href={"/posts/" + post.slug.current} class="post-link">
                        {post.title}
                    </a>
                    <p class="post-date">{post.publishedAt.slice(0,-14)}</p>


                </div>
           
            </li>
        ))}
        </ul>
    </div>
</section>


<style>


    .section-blog {
        max-width: 1800px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        padding: 8rem;
        padding-top: 50px;
    }

    
	.main-content {
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
		gap: 3rem;
		justify-content: space-between;
		padding-bottom: 2rem;
	}

	.main-content p {
        font-size: clamp(1.55em, 2.3vw, 2.5em);
		width: 40ch;
		margin-top: -10px;
		line-height: 150%;
		font-weight: 400;
		text-align: center;
	}


    ul {
        list-style: none;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 3rem;
    }

    .li-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .post-date {
        margin-top: -12px;
    }

    li a {
        text-decoration: none;
        color: #232323;
        font-size: 28px;
    }

    img {
        border-radius: 20px;
    }

    @media (max-width: 1279px) {

        .section-blog {
            padding: 8rem 1.5rem;
        }

        ul {
            flex-direction: column;
        }

		.main-content p {
			width: auto;
			margin: 0;
		}

		
		.main-content {
			padding: 0;
			gap: 0;
		}

    }
    
</style>