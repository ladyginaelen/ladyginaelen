---
const { number, text, price} = Astro.props;
---

<div class="card" >
    <div class="content-container">
        <h3 class="card-number">{number}</h3>
        <div>
            <p class="card-text">{text}</p>
            <hr>
            <p class="card-price">{price}</p>
        </div>
    </div>
</div>


<style>

    hr {
        margin: 1.5rem 0;
        border: 1px solid #8a8a8a25;
    }

	.card {
		border-radius: 20px;
        padding: 2rem;
        transition: .8s ease-in-out;
        background: #ffffff1e;
        backdrop-filter: blur(3px);
        border: 1px solid #ffffffd0;
        z-index: 90;
	}

    .card:hover {
        box-shadow: rgba(212, 208, 184, 0.712) 4px 4px 18px;
    }


    .card-number {
        margin-bottom: 2rem;
        font-weight: var(--fw-300);
        font-size: clamp(1.5rem, 1.9vw, 2rem);
    }

    .content-container {
        display: flex;

        flex-direction: column;

        justify-content: space-between;
        height: 100%;
    }

    .card-header {
        font-size: clamp(1.5rem, 1.9vw, 2rem);
        margin-bottom: 1rem;
    }

    .card-text {
        margin-bottom: 1rem;
    }

</style>