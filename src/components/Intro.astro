<div class="intro">
    <p class="logo-header">
        <span class="logo-intro">Lady</span><span class="logo-intro">gina</span>
        
    </p>
</div>

<style>
    .intro {
        position: fixed;
        z-index: 999;
        width: 100%;
        height: 100vh;
        top: 0;
        background: #232323;
        transition: 1s;
    }

    p {
        color: #fff;
        font-size: 3rem;
    }

    .logo-header {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }

    .logo-intro {
        position: realative;
        display: inline;
        bottom: -20px;
        opacity: 0;
    }

    .logo-intro.active {
        bottom: 0;
        opacity: 1;
        transition: ease-in-out 0.5s;
        position: relative;
    }

    .logo.fade {
        position: relative;
        bottom: 150px;
        opacity: 0;
        transition: ease-in-out 0.5s;
        
    }
</style>

<script>

    let intro = document.querySelector('.intro');
    let logo = document.querySelector('.logo-header');
    let logoSpan = document.querySelectorAll('.logo-intro');

    window.addEventListener('DOMContentLoaded', ()=>{
        setTimeout(() => {

            logoSpan.forEach((span, idx) => {
                setTimeout(() => {
                    span.classList.add('active');
                }, (idx + 1) * 400)
            });

            setTimeout(() => {
                
                logoSpan.forEach((span, idx) => {
                    setTimeout(() => {
                        span.classList.remove('active');
                        span.classList.add('fade');
                    }, (idx + 1) * 150)
                }, 2000)
            });

            setTimeout(()=>{
                intro.style.top = '-100vh';
            }, 2300)


        })
    })

</script>